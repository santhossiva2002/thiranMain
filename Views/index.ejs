<script>
  const interval = 1750;
  let slideIndex = 0;
  const slides = document.querySelectorAll('.galleryslider img');

  function showSlides() {
    slides.forEach((slide) => {
      slide.style.display = 'none';
    });
    slideIndex++;
    if (slideIndex > slides.length) {
      slideIndex = 1;
    }
    slides[slideIndex - 1].style.display = 'block';
    setTimeout(showSlides, interval);
  }

  showSlides(); 
</script>

